{
  "name": "infinite-canvas",
  "displayName": "Infinite Canvas",
  "description": "A powerful visual canvas editor for VS Code. Create infinite mind maps, diagrams, and visual workflows with AI-powered content generation and markdown support.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "icon": "icon.png",
  "keywords": [
    "canvas",
    "visual",
    "mind map",
    "diagram",
    "ai",
    "markdown"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCustomEditor:infinite-canvas.canvasEditor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "infinite-canvas.canvasEditor",
        "displayName": "Infinite Canvas",
        "selector": [
          {
            "filenamePattern": "*.canvas"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "infinite-canvas.newCanvas",
        "title": "New Canvas",
        "category": "Infinite Canvas"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "infinite-canvas.newCanvas",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Infinite Canvas",
      "properties": {
        "infinite-canvas.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for AI-powered idea generation (optional - fallback to mock responses if not provided)",
          "markdownDescription": "Groq API key for AI-powered idea generation. Get your free API key at [console.groq.com](https://console.groq.com). If not provided, the extension will use mock responses."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/infinite-canvas/infinite-canvas-vscode"
  },
  "homepage": "https://github.com/infinite-canvas/infinite-canvas-vscode#readme",
  "bugs": {
    "url": "https://github.com/infinite-canvas/infinite-canvas-vscode/issues"
  },
  "publisher": "infinite-canvas-dev",
  "license": "MIT",
  "author": {
    "name": "Infinite Canvas Team"
  },
  "galleryBanner": {
    "color": "#2D3748",
    "theme": "dark"
  }
}