{
  "name": "infinite-canvas",
  "displayName": "Infinite Canvas",
  "description": "A powerful visual canvas editor for VS Code with full Obsidian Canvas compatibility. Create infinite mind maps, diagrams, and visual workflows with AI-powered content generation and markdown support.",
  "version": "0.1.5",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other",
    "Notebooks"
  ],
  "icon": "icon.png",
  "keywords": [
    "obsidian",
    "obsidian-canvas",
    "canvas",
    "visual",
    "mind map",
    "diagram",
    "knowledge management",
    "note taking",
    "pkm",
    "ai",
    "markdown",
    "graph",
    "visualization",
    "workflow"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCustomEditor:infinite-canvas.canvasEditor",
    "onLanguage:canvas"
  ],
  "contributes": {
    "languages": [
      {
        "id": "canvas",
        "aliases": [
          "Canvas",
          "canvas"
        ],
        "extensions": [
          ".canvas"
        ],
        "mimetypes": [
          "application/json"
        ],
        "icon": {
          "light": "./icon.svg",
          "dark": "./icon.svg"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "infinite-canvas.canvasEditor",
        "displayName": "Infinite Canvas",
        "selector": [
          {
            "filenamePattern": "*.canvas"
          }
        ],
        "priority": "default"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.canvas": "canvas"
      },
      "workbench.editorAssociations": {
        "*.canvas": "default"
      }
    },
    "commands": [
      {
        "command": "infinite-canvas.newCanvas",
        "title": "New Canvas",
        "category": "Infinite Canvas"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "infinite-canvas.newCanvas",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Infinite Canvas",
      "properties": {
        "infinite-canvas.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API key for AI-powered idea generation (optional - fallback to mock responses if not provided)",
          "markdownDescription": "OpenRouter API key for AI-powered idea generation. Get your free API key at [openrouter.ai](https://openrouter.ai). If not provided, the extension will use mock responses."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build",
    "dev:webview": "vite",
    "watch:all": "npm run watch & npm run dev:webview"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tiptap/core": "^3.9.0",
    "@tiptap/extension-placeholder": "^3.9.0",
    "@tiptap/pm": "^3.9.0",
    "@tiptap/starter-kit": "^3.9.0",
    "@types/node": "^24.9.2",
    "@types/vscode": "^1.74.0",
    "@xyflow/svelte": "^1.4.1",
    "svelte": "^5.43.0",
    "terser": "^5.44.0",
    "tiptap-markdown": "^0.9.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lout33/infinite_canvas_vscode"
  },
  "homepage": "https://github.com/lout33/infinite_canvas_vscode#readme",
  "bugs": {
    "url": "https://github.com/lout33/infinite_canvas_vscode/issues"
  },
  "publisher": "LuisFernando",
  "license": "MIT",
  "author": {
    "name": "Infinite Canvas Team"
  },
  "galleryBanner": {
    "color": "#2D3748",
    "theme": "dark"
  }
}
